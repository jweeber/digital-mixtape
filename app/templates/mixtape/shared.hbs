<body class="mixtape-container" style={{background-color backgroundColor}}>
  <div class="share-it" style={{fontStyle fontFamily}}><span style={{fontColor fontColor}} class="share-text">Share it!</span>
    {{#fb-share-button title="digital mixtape: connect through music. again." text="I made an awesome mixtape!" image='http://www.officialpsds.com/images/thumbs/mixtape-psd63409.png'}}{{/fb-share-button}}
    {{#twitter-share-button title="digital mixtape: connect through music. again." text="I made an awesome mixtape!" image="http://www.officialpsds.com/images/thumbs/mixtape-psd63409.png" hashtags="mixtape"}}{{/twitter-share-button}}
  </div><br>

  <div class="title-container">
    <h2 class="mixtape-title mixtape-text" style={{fontStyle fontFamily}}><span style={{fontColor fontColor}}>{{title}}</span></h2>
  </div>

  <div id="personal-message" class="mixtape-text" style={{fontStyle fontFamily}}><span style={{fontColor fontColor}}>{{message}}</span></div>

  <div class="mixtape-outer-container">
    <div class="photo-container">
      {{#if mixtapePhotos}}
        {{#un-slider slides=mixtapePhotos nav=false arrows=false animation='fade' autoplay=true speed=800 delay=4000 as |slide|}}
        <div class="box photos"><img src={{slide}} class="user-images"></div>
      {{/un-slider}}
      {{else}}
        {{#un-slider slides=genericPhoto nav=false arrows=false animation='fade' autoplay=true speed=800 delay=6000 as |slide|}}
          <div id="box photos" id="generic-photo"><img src={{slide.url}} class="user-images"></div>
        {{/un-slider}}
      {{/if}}
    </div>

    <div class="playlist-player">
      <iframe src="https://embed.spotify.com/?uri=spotify:user:{{userId}}:playlist:{{playlistId}}&theme=white" width="300" height="380" frameborder="0" allowtransparency="true" class="spotify-player"></iframe>
    </div>
  </div>

  <div class="stickers sticker1 {{theme}}"></div>
  <div class="stickers sticker2 {{theme}}"></div>
  <div class="stickers sticker3 {{theme}}"></div>
  <div class="stickers sticker4 {{theme}}"></div>
  <div class="stickers sticker5 {{theme}}"></div>
  <div class="stickers sticker6 {{theme}}"></div>
  <div class="stickers sticker7 {{theme}}"></div>
  <div class="stickers sticker8 {{theme}}"></div>
  <div class="stickers sticker9 {{theme}}"></div>
  <div class="stickers sticker10 {{theme}}"></div>
  <div class="stickers sticker11 {{theme}}"></div>
  <div class="stickers sticker12 {{theme}}"></div>
</body>
